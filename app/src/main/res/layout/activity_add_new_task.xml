<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewTask"
    android:orientation="vertical"
    android:background="@drawable/back">
    <Button
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/back_button"
        android:typeface="serif"
        android:text="@string/back"
        android:backgroundTint="@color/color2"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/question_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quest_num"
        android:textColor="@color/white"
        android:typeface="serif"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginVertical="20dp"/>

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="serif"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:text="@string/question" />

    <EditText
        android:id="@+id/edit_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/variant1"
        android:typeface="serif"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/var1" />

    <EditText
        android:id="@+id/edit_variant1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/variant2"
        android:typeface="serif"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/var2" />

    <EditText
        android:id="@+id/edit_variant2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/variant3"
        android:typeface="serif"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/var3" />

    <EditText
        android:id="@+id/edit_variant3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/variant4"
        android:typeface="serif"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/var4" />

    <EditText
        android:id="@+id/edit_variant4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/number"
        android:typeface="serif"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/right_var" />

    <Spinner
        android:layout_marginVertical="10dp"
        android:id="@+id/spinner_variant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_high"
        app:layout_constraintBottom_toTopOf="@id/here_test"/>

    <Button
        android:layout_margin="10dp"
        android:backgroundTint="@color/color2"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:typeface="serif"
        android:layout_height="wrap_content"
        android:id="@+id/add_button"
        android:text="@string/create_button"
        android:textSize="20dp"/>

</LinearLayout>