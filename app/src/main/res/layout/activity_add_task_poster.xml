<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTaskPoster"
    android:background="@drawable/back">
    <TextView
        android:textColor="@color/white"
        android:id="@+id/choose_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/spinner_languages"
        android:text="@string/choose_school"
        android:typeface="serif"
        android:gravity="center"
        android:textSize="40sp"/>

    <Spinner
    android:id="@+id/spinner_languages"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:spinnerMode="dropdown"
    android:background="@drawable/white_back" android:padding="15dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/choose_high"
    app:layout_constraintBottom_toTopOf="@id/here_test"/>


    <TextView
        android:id="@+id/here_test"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_languages"
        app:layout_constraintBottom_toTopOf="@id/create_test"
        android:text="@string/test_num"
        android:typeface="serif"
        android:textSize="30dp"
        />
    <Button
        android:backgroundTint="@color/color2"
        android:id="@+id/create_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="serif"
        android:textSize="20dp"
        android:layout_marginHorizontal="110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/here_test"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/create_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>