<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/back2"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:minWidth="140dp"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:typeface="serif"
                tools:ignore="ButtonStyle,HardcodedText,SpUsage,TextSizeCheck" />

            <Button
                android:id="@+id/next1"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:minWidth="140dp"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:typeface="serif"
                tools:ignore="ButtonStyle,HardcodedText,SpUsage,TextSizeCheck" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            tools:ignore="UselessLeaf">

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp">

            <!-- Your content here -->

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Irrational equations"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="42dp"
            android:typeface="serif"
            app:layout_constraintBottom_toTopOf="@id/first"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="15dp"
            android:text="@string/first"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:typeface="serif"
            tools:ignore="MissingConstraints,RtlHardcoded,SpUsage,TextSizeCheck" />


        <TextView
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:gravity="left"
            android:text="@string/second"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:typeface="serif"
            tools:ignore="MissingConstraints,RtlHardcoded,SpUsage,TextSizeCheck" />

        <TextView
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="1dp"
            android:text="@string/third"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:typeface="serif"
            tools:ignore="MissingConstraints,SpUsage,TextContrastCheck,TextSizeCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="√x = 9"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:typeface="serif"
            tools:ignore="HardcodedText,MissingConstraints,SpUsage,TextSizeCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:text="Explanation:"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:typeface="serif"
            tools:ignore="HardcodedText,MissingConstraints,SpUsage,TextSizeCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            android:text=" We must remember that x >= 0 and x = 9*9"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:typeface="serif"
            tools:ignore="HardcodedText,MissingConstraints,SpUsage,TextContrastCheck,TextSizeCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:text="Solution:         x = 81"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:typeface="serif"
            tools:ignore="HardcodedText,MissingConstraints,SpUsage,TextSizeCheck" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            android:text="@string/fourth"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:typeface="serif"
            tools:ignore="HardcodedText,MissingConstraints,SpUsage,TextSizeCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="3dp"
            android:gravity="center"
            android:text="√2x+1=3"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:typeface="serif"
            tools:ignore="HardcodedText,MissingConstraints,SpUsage,TextSizeCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:text="Explanation:"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:typeface="serif"
            tools:ignore="HardcodedText,MissingConstraints,SpUsage,TextSizeCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            android:text="2x+1 >= 0 and (2x+1) = 3*3"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:typeface="serif"
            tools:ignore="HardcodedText,MissingConstraints,SpUsage,TextSizeCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:text="Solution:           x = 4"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:typeface="serif"
            tools:ignore="HardcodedText,MissingConstraints,SpUsage,TextSizeCheck" />

        <Button
            android:id="@+id/task_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginEnd="75dp"
            android:minWidth="140dp"
            android:text="Tasks"
            android:typeface="serif"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText,MissingConstraints,SpUsage,TextSizeCheck,VisualLintButtonSize" />

    </LinearLayout>

</ScrollView>

