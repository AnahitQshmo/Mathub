<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RandomTest"
    android:background="@drawable/back">


    <TextView
        android:id="@+id/just"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There are random tests for you!"
        android:textSize="55dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:typeface="serif"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/test_num"/>

    <TextView
        android:id="@+id/test_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test number"
        android:layout_margin="60dp"
        android:textSize="45dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:typeface="serif"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/go_button"/>

    <Button
        android:id="@+id/go_button"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="Let's go"
        android:typeface="serif"
        android:textSize="35dp"
        android:backgroundTint="@color/color3"
        android:layout_marginHorizontal="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test_num"/>

</androidx.constraintlayout.widget.ConstraintLayout>